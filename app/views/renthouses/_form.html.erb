<%= form_with(model: @renthouse, local: true) do |f| %>

  <%= f.label "物件名" %><br>
  <%= f.text_field :name %><br>
  <%= f.label "賃料" %><br>
  <%= f.text_field :rent %>
  <span>円</span><br>

  <%= f.label "住所" %><br>
  <%= f.text_field :address %><br>

  <%= f.label "築年数" %><br>
  <%= f.text_field :age %>
  <span>年</span><br>

  <%= f.label "備考" %><br>
  <%= f.text_area :remarks %><br>

  <hr>

    <% if action_name == 'new' %>
      <% 2.times do %>
        <%= f.fields_for :stations do |g| %>
          <p><strong>最寄り駅<%= "#{g.index + 1}" %></strong></p>
          <%= g.label :route, "路線名" %><br>
          <%= g.text_field :route %><br>
        
          <%= g.label :stationname, "駅名" %><br>
          <%= g.text_field :stationname %><br>
        
          <%= g.label :time, "徒歩分数" %><br>
          <%= g.text_field :time %><br>
        <% end %>
      <% end %>
    <% end %>
  
    <% if action_name == 'edit' %>
      <%= f.fields_for :stations do |g| %>
        <p><strong>最寄り駅<%= "#{g.index + 1}" %></strong></p>
        <%= g.label :route, "路線名" %><br>
        <%= g.text_field :route %><br>
      
        <%= g.label :stationname, "駅名" %><br>
        <%= g.text_field :stationname %><br>
      
        <%= g.label :time, "徒歩分数" %><br>
        <%= g.text_field :time %><br>
      <% end %>
    <% end %>
  
  <%= f.submit "登録する" %>
<% end %>

