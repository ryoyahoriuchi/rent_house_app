<h1>物件一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>物件名</th>
    <th>賃料</th>
    <th>住所</th>
    <th>築年数</th>
    <th>備考</th>
  <tr>

  <% @renthouse.each do |house| %>
    <tr>
      <td><%= house.name %></td>
      <td><%= house.rent %></td>
      <td><%= house.address %></td>
      <td><%= house.age %></td>
      <td><%= house.remarks %></td>
      <td><%= link_to '詳細', renthouse_path(house) %></td>
      <td><%= link_to '編集', edit_renthouse_path(house) %></td>
      <td><%= button_to '削除', renthouse_path(house), method: :delete,  data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>

<%= link_to '物件を登録する', new_renthouse_path %>